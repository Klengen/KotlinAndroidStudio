<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recyclerview_height"
        android:background="@drawable/selectable_recyclerview"
        android:layout_margin="2dp"
    >

    <TextView
            android:id="@+id/textView"
            style="@style/cookingApp_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/check"
            app:layout_constraintTop_toTopOf="@id/textView"
            android:textSize="@dimen/recyclerview_list_text_size"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLength="25"
            android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="@string/checked"
        android:src="@drawable/haekchen_selected"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>